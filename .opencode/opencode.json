{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "theme": "opencode",
  "autoupdate": false,
  "share": "manual",
  "plugin": [
    "@tarquinen/opencode-dcp"
  ],
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["podman", "run", "-i", "--rm", "mcp/playwright"],
      "enabled": true
    },
    "time": {
      "type": "local",
      "command": ["podman", "run", "-i", "--rm", "mcp/time"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa",
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": ["podman", "run", "-i", "--rm", "-v", "{env:HOME}/.local/state/memory:/data", "mcp/memory"],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["podman", "run", "-i", "--rm", "mcp/sequentialthinking"],
      "enabled": true
    }
  },
  "default_agent": "metasohail",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "instructions": [
    "AGENTS.md",
    "CONTRIBUTING.md",
    "docs/*.md"
  ]
}
